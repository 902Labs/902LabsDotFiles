[core]
	editor = nvim
	pager = less
	excludesfile = ~/.gitignore

[alias]
	aa = add --all

	# BRANCHES
	br = !git --no-pager branch
	bv = !git --no-pager branch -v
	ba = branch -ra
	bd = branch -D
	bm = branch -m

	# COMMITS
	ca = commit --amend
	can = commit --amend --no-edit
	ci = commit -a -v
	cm = commit -am
	cmn = commit -amn

	# CHECKOUTS
	co = checkout
	cb = checkout -b

	di = diff
	dom = diff origin/main
	dum = diff upstream/main
	dh = rev-parse HEAD

	# LOG RELATED
	last = !git log -1 HEAD --pretty=format:\"%h\" | awk '{print $1}'
	head = !git branch --show-current | xargs git log main..
	ohead = !git branch --show-current | xargs git log origin/main..
	uhead = !git branch --show-current | xargs git log upstream/main..
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%C(cyan)\\ [%cn]" --decorate --numstat
	lg = log --graph --oneline --decorate

	ri = rebase -i
	rom = rebase main
	rum = rebase upstream/main
	#ro = rebase --onto
	rba = rebase --abort
	rbs = rebase --skip
	rbc = rebase --continue

	mf = merge --ff -v
	mm = merge --no-ff
	ms = merge --squash

	pl = pull -v
	plff = pull --ff-only
	st = status --short --branch
	tg = tag -a

	p = push
	pt = push --tags
	pf = push -f
	pm = push main

	po = push origin
	pof = push -f origin

	pu = push upstream
	pum = push upstream main
	pom = push origin main
	pomf = push -f origin main
	pon = push origin next
	ponf = push -f origin next

	un = reset --hard
	unom = reset --hard origin/main
	unum = reset --hard upstream/main
	unun = reset --hard upstream/next

	undo = checkout HEAD --
	unstage = reset HEAD --

	fu = fetch upstream
	fum = fetch upstream main
	fo = fetch origin
	fom = fetch origin main

	sl = stash list
	sp = stash pop
	ss = stash show -v
	sc = stash clear

	rs = remote show
	rso = remote show origin
	permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply

[color]
	grep = auto
	diff = auto
	status = auto
	branch = auto

[branch]
	autosetuprebase = always
[http]
	sslverify = false
[push]
	default = current
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
[diff]
	tool = bc3
[difftool]
	bc3 = trustExitCode
