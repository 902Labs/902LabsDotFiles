        name = Russell Brown

[credential "https://github.ua.com"]
	username = rbrown

[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = less

[alias]
    aa = add --all

    # BRANCHES
    bv = branch -v
    ba = branch -ra
    bd = branch -D
    br = branch

    # COMMITS
    ca = commit --amend
    cm = commit -v
    ci = commit -a -v

	# CHECKOUTS
    co = checkout
    cb = checkout -b

    di = diff

    # LOG RELATED
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lg = log --graph --oneline --decorate

    ri = rebase -i
    rom = rebase master
    rum = rebase upstream/master
    #ro = rebase --onto

    mf = merge --ff -v
    mm = merge --no-ff
    ms = merge --squash

    pl = pull -v
    plff = pull --ff-only
    st = status --short --branch
    tg = tag -a

    pu = push --tags
    pf = push -f
    po = push origin
	pbase = "!f() { git push --force team $2:refs/head/$1; }; f"

    pof = push -f origin

    pom = push origin master
    pomf = push -f origin master
    pon = push origin next
    ponf = push -f origin next

    un = reset --hard
    unum = reset --hard upstream/master
    unun = reset --hard upstream/next

    last = log -1 HEAD
    undo = checkout HEAD --
    unstage = reset HEAD --

    fu = fetch upstream

    killu = reset --hard upstream/master
    killun = reset --hard upstream/next

    sl = stash list
    sp = stash pop
    ss = stash show -v
    sc = stash clear

    rs = remote show
    rso = remote show origin

[color]
    grep = auto
    diff = auto
    status = auto
    branch = auto

[branch]
    autosetuprebase = always
[http]
	sslverify = false
[push]
	default = simple
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
[diff]
	tool = bc3
[difftool]
	bc3 = trustExitCode
